<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<h1>User info</h1>
<%= form_for(@user) do |f| %>
<h4>user_name</h4>
<%= f.text_field :user_name , class: "form-group form-control"%>

<!-- <h4>image</h4> -->
<%#= f.attachment_field :image, class: "form-group form-control"  %>

<h4>introduction</h4>
<%= f.text_area :introduction, class: "form-group form-control" %>

<%= f.submit "Update User", class: "btn btn-default" %>

<% end %>