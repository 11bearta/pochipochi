<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<div class="devise_window">
	<h1>ユーザー情報</h1>
	<%= form_for(@user) do |f| %>
	<h4>ユーザーアイコン</h4>
	<%= f.attachment_field :image %>
	<h4>ユーザーネーム</h4>
	<%= f.text_field :user_name , class: "form-group form-control"%>
	<h4>自己紹介</h4>
	<%= f.text_area :introduction, class: "form-group form-control" %>

	<%= f.submit "ユーザー情報の更新", class: "btn btn-default" %>

	<% end %>
</div>